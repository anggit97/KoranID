<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppBarText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/dp_7</item>
        <item name="android:drawableStart">@drawable/ic_header_start</item>
    </style>

    <style name="CellCategory">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">@dimen/dp_100</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
